							"})\r",
							"\r",
							"pm.test(\"Status code name is Created\", function(){\r",
							"    pm.expect(pm.response.status).to.eql(\"Created\")\r",
							"})\r",
							"\r",
							"pm.test(\"Response is within 300ms\", function(){\r",
							"    pm.expect(pm.response.responseTime).to.be.below(300)\r",
							"})\r",
							"\r",
							"pm.test(\"Does response contain id, firstname and lastname\", function () {\r",
							"    const jsonData = pm.response.json();\r",
							"\r",
